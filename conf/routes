# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /blip-mosaic/          controllers.BlipMosaic.index
GET	   /blip-mosaic/start controllers.BlipMosaic.start(username :String)
GET     /blip-mosaic/:searchQuery/:targetEntryId   controllers.BlipMosaic.generateHtml(searchQuery :String, targetEntryId :String)    
GET     /blip-mosaic/:searchQuery/:targetEntryId/image.jpg controllers.BlipMosaic.generateImage(searchQuery :String, targetEntryId :String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
